<%- include('../partials/header') %>


<ul>
    <li>Flight: <%= flight.airline %> | <%= flight.flightNo %></li>
    <li>Departing: <%= flight.airport %></li>
    <li>At: <%= flight.departTime %></li>
</ul>

<a href="/flights/<%= flight._id %>/edit">Edit Flight Details</a>

<br>
<br>
<form method="POST" action="/flights/<%= flight._id %>/destinations">
    <label>Enter Destination
        <input type="text" name="destinations">
    </label><br><br>
    <input type="submit" value="Confirm Changes">
</form>
<br>
<h3>Destinations:</h3>
<ol>
    <% flight.destinations.forEach(function(d) { %>
        <li><%= d.destinations %> </li>
    <% }) %>
</ol>
<br><br>
<form method="POST" action="/flights/<%= flight._id %>/tickets">
    <label>Select a Seat - A-F/1-9:
        <input name="tickets" required pattern="[A-F][1-9]\d?">
    </label><br>
    <label>Price:
        <% function randomNum() { %>
           <% var num = Math.floor(Math.random() * 100); %>
           <p>Â£<%= num %></p>
        <% } %>
        <% randomNum() %>
    </label><br>
    <label>
        <input type="submit" value="Confirm Seat">
    </label>
</form>
<h4>Taken Tickets:</h4><br>
<ul>
    <% flight.tickets.forEach(function(t) { %>
        <li><%= t.tickets %></li>
    <% }) %>
</ul>

<%- include('../partials/footer') %>