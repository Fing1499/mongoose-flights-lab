<%- include('../partials/header') %>

<h1>EDIT FLIGHT</h1>
<form action="/flights/<%= flight.id %>?_method=PUT" method="POST">
    <label>Airline:
        <input type="text" name="airline" value="<%= flight.airline %>">
    </label><br>
    <label>Airport:
        <input type="text" name="airport" value="<%= flight.airport %>">
    </label><br>
    <label>Flight Number:
        <input type="number" name="flightNo" value="<%= flight.flightNo %>">
    </label><br>
    <label>Departure Date
        <input type="date" name="departTime" value="<%= flight.departTime %>">
    </label><br>

    <input type="submit"></input>
</form>


<%- include('../partials/footer') %>
